{
  "name": "Android-Update-Server",
  "description": "Update your android apps with ease without any store",
  "repository": "https://github.com/P1-Ro/Android-Update-Server",
  "logo": "https://image.flaticon.com/icons/svg/3039/3039437.svg",
  "success_url": "https://github.com/P1-Ro/Android-Update-Server/wiki/After-deployment",
  "keywords": [
    "android",
    "update-server",
    "firebase-cloud-messaging",
    "spring-boot"
  ],
  "env": {
    "apiKey": {
      "description": "A secret key for calling api to use in apps",
      "generator": "secret"
    },
    "FIREBASE_CREDENTIALS": {
      "description": "Content of json file downloaded from firebase",
      "value": ""
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/java"
    }
  ]
}